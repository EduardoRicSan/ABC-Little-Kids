<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_question"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.edu.utng.login.QuestionActivity"
    android:background="#30AA">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/manual_de_usaurio"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:id="@+id/tv_manual" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/usuario"
        android:layout_below="@+id/tv_manual"
        android:layout_alignRight="@+id/tv_manual"
        android:layout_alignEnd="@+id/tv_manual"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="40dp"
        android:id="@+id/iv_user"/>

    <ImageView
        android:layout_width="@dimen/sett_size"
        android:layout_height="@dimen/sett_size"
        android:background="@drawable/backk"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/iv_back" />


</RelativeLayout>
