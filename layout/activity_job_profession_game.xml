<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_job_profession_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="mx.edu.utng.login.JobProfessionGame"
    android:background="@drawable/portada">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/video"
        android:id="@+id/bt_video"
        android:layout_centerInParent="true"
        android:background="@color/videoColor"
        android:layout_margin="10dp"
        android:clickable="true"
        android:focusable="true"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/jobs_and_professions"
        android:layout_below="@id/bt_video"
        android:id="@+id/bt_job_activity"
        android:background="@color/videoColor"
        android:clickable="true"
        android:focusable="true"
        />




</RelativeLayout>
