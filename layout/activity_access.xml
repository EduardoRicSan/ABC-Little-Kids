<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/sol"
    tools:context=".AccessActivity">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="20dp"
        android:id="@+id/bt_logout"
        android:layout_alignParentBottom="true"
        android:background="#FFFF88"
        />

    <ImageView
        android:layout_width="@dimen/set_size"
        android:layout_height="@dimen/sett_size"
        android:id="@+id/iv_setting"
        android:background="@drawable/settingood"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="13dp"
        android:layout_marginEnd="13dp"
        android:layout_marginTop="14dp" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:id="@+id/iv_entrar"
        android:background="@drawable/entrada"
        android:layout_marginBottom="146dp"
        android:layout_above="@+id/bt_logout"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_entrada"
        android:background="@drawable/player"
        android:layout_above="@+id/iv_entrar"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="@dimen/sett_size"
        android:layout_height="@dimen/sett_size"
        android:id="@+id/iv_pregunta"
        android:background="@drawable/pregunta"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
