<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_tic_tac_toe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mx.edu.utng.tictactoe.TicTacToeActivity"
    tools:showIn="@layout/activity_tic_tac_toe"
    android:background="@drawable/fondotictac"
    >

    <GridLayout
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/gato"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="41dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:columnCount="3"
        android:rowCount="3"
        android:id="@+id/gl_game"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_bee_one"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginLeft="@dimen/margin_left_bee"
            android:layout_marginTop="@dimen/top_bee"
            android:onClick="gameLogic"
            android:tag="0"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_circle_two"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/margin_left_bee"
            android:layout_marginTop="@dimen/top_bee"
            android:onClick="gameLogic"
            android:tag="1"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_circle_three"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginLeft="@dimen/margin_left_bee"
            android:layout_marginTop="@dimen/top_bee"
            android:onClick="gameLogic"
            android:tag="2"/>
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_marginLeft="@dimen/margin_left_bee"
            android:layout_marginTop="@dimen/top_second_bee"
            android:onClick="gameLogic"
            android:tag="3"/>


        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_circle_five"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/second_left_bee"
            android:layout_marginTop="@dimen/top_second_bee"
            android:onClick="gameLogic"
            android:tag="4"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_circle_six"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_marginLeft="@dimen/second_left_bee"
            android:layout_marginTop="@dimen/top_second_bee"
            android:onClick="gameLogic"
            android:tag="5"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_circle_seven"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_marginLeft="@dimen/margin_left_bee"
            android:layout_marginTop="@dimen/top_three_bee"
            android:onClick="gameLogic"
            android:tag="6"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_circle_eight"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_marginLeft="@dimen/margin_left_bee"
            android:layout_marginTop="@dimen/top_three_bee"
            android:onClick="gameLogic"
            android:tag="7"
            />
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/iv_circle_nine"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_marginLeft="@dimen/margin_left_bee"
            android:layout_marginTop="@dimen/top_three_bee"
            android:onClick="gameLogic"
            android:tag="8"
            />
    </GridLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/winner_layout"
        android:background="@color/back">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:id="@+id/tvMsg"
            />

        <Button
            android:text="Play Again"
            android:layout_width="124dp"
            android:layout_height="wrap_content"
            android:id="@+id/bt_play"
            android:onClick="playAgain"
            />


    </LinearLayout>
</RelativeLayout>

