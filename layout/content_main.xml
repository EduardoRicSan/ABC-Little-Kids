<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="mx.edu.utng.login.PaintActivity"
    tools:showIn="@layout/activity_menu_paint"
    android:orientation="vertical"
    android:weightSum="1">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:text="Button"
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:id="@+id/ib_new"
            android:src="@drawable/nuevo"
            android:scaleType="centerCrop"
            />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="70dp"
            android:id="@+id/ib_clean"
            android:layout_weight="1"
            android:src="@drawable/borra"
            android:scaleType="centerCrop"
            android:tag="@string/erase_tag"
            />

        <ImageButton

            android:layout_width="60dp"
            android:layout_height="70dp"
            android:id="@+id/ib_save"
            android:layout_weight="1"
            android:src="@drawable/guardar"
            android:scaleType="centerCrop"
            />
        <!--    android:src="@drawable/save"
           android:scaleType="centerCrop"-->

   </LinearLayout>




   <mx.edu.utng.login.Lienzo
       android:layout_width="match_parent"
       android:layout_height="322dp"
       android:id="@+id/lienzo"
       android:background="#FFFFFFFF"
       android:layout_weight="0.96" />

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <ImageButton
           android:layout_width="0dp"
           android:layout_height="@dimen/height_ib"
           android:layout_weight="1"
           android:tag="#ff99cc00"
           app:srcCompat="@color/green"
           android:id="@+id/ib_green"

            />



       <ImageButton
           android:layout_width="0dp"
           android:layout_height="@dimen/height_ib"
           android:layout_weight="1"
           android:tag="#ffaa66cc"
           app:srcCompat="@color/purple"
           android:id="@+id/ib_purple"
           />

       <ImageButton
           android:layout_width="0dp"
           android:layout_height="@dimen/height_ib"
           android:layout_weight="1"
           android:tag="#ff0099cc"
           app:srcCompat="@color/blue"
           android:id="@+id/ib_blue"
            />

       <ImageButton
           android:layout_width="0dp"
           android:layout_height="@dimen/height_ib"
           android:layout_weight="1"
           android:tag="#ffcc0000"
           app:srcCompat="@color/red"
           android:id="@+id/ib_red"
            />
       <ImageButton
           android:layout_width="0dp"
           android:layout_height="@dimen/height_ib"
           android:layout_weight="1"
           android:tag="#795548"
           app:srcCompat="@color/brown"
           android:id="@+id/ib_brown"
           />





       <ImageButton
           android:layout_width="0dp"
           android:layout_height="@dimen/height_ib"
           android:layout_weight="1"
           android:tag="#FFFFBB33"
           app:srcCompat="@color/orange"
           android:id="@+id/ib_orange"
           />

       <ImageButton
           android:layout_width="0dp"
           android:layout_height="@dimen/height_ib"
           android:layout_weight="1"
           android:tag="#E91E63"
           app:srcCompat="@color/pink"
           android:id="@+id/ib_pink"
           />
       <ImageButton
           android:layout_width="0dp"
           android:layout_height="@dimen/height_ib"
           android:layout_weight="1"
           android:tag="#FFEB3B"
           app:srcCompat="@color/yellow"
           android:id="@+id/ib_yellow"
           />

       <ImageButton
           android:layout_width="0dp"
           android:layout_height="@dimen/height_ib"
           android:layout_weight="1"
           android:tag="#ff000000"
           app:srcCompat="@android:color/background_dark"
           android:id="@+id/ib_black"
           />
   </LinearLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <ImageButton
           android:layout_width="0dp"
           android:layout_height="@dimen/height_ib"
           android:layout_weight="1"
           android:id="@+id/ib_small"
           android:src="@drawable/pencil"
           android:scaleType="center"
           />
       <ImageButton
           android:layout_width="0dp"
           android:layout_height="@dimen/height_ib"
           android:layout_weight="1"
           android:src="@drawable/pen"
           android:id="@+id/ib_medium"
           android:scaleType="center"
           />
       <ImageButton
           android:layout_width="0dp"
           android:layout_height="@dimen/height_ib"
           android:layout_weight="1"
           android:src="@drawable/pincel"
           android:id="@+id/ib_big"
           android:scaleType="center"
           />

   </LinearLayout>



</LinearLayout>
